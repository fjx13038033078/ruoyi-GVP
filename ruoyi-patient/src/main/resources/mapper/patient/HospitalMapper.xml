<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.patient.mapper.HospitalMapper">

    <resultMap type="com.ruoyi.patient.domain.Hospital" id="HospitalResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="address" column="address"/>
        <result property="contact" column="contact"/>
    </resultMap>

    <!-- 获取所有医院 -->
    <select id="getAllHospitals" resultMap="HospitalResult">
        SELECT id, name, address, contact
        FROM gvp_hospital
    </select>

    <!-- 根据医院ID获取医院信息 -->
    <select id="getHospitalById" parameterType="Long" resultMap="HospitalResult">
        SELECT id, name, address, contact
        FROM gvp_hospital
        WHERE id = #{id}
    </select>

    <!-- 添加医院 -->
    <insert id="addHospital" parameterType="com.ruoyi.patient.domain.Hospital">
        INSERT INTO gvp_hospital (name, address, contact)
        VALUES (#{name}, #{address}, #{contact})
    </insert>

    <!-- 更新医院信息 -->
    <update id="updateHospital" parameterType="com.ruoyi.patient.domain.Hospital">
        UPDATE gvp_hospital
        SET name = #{name},
            address = #{address},
            contact = #{contact}
        WHERE id = #{id}
    </update>

    <!-- 删除医院 -->
    <delete id="deleteHospital" parameterType="Long">
        DELETE FROM gvp_hospital WHERE id = #{id}
    </delete>

</mapper>
