<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.patient.mapper.PatientMapper">

    <resultMap id="PatientResultMap" type="com.ruoyi.patient.domain.Patient">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="doctorId" column="doctor_id"/>
        <result property="medicalRecordNo" column="medical_record_no"/>
        <result property="age" column="age"/>
        <result property="gender" column="gender"/>
        <result property="history" column="history"/>
    </resultMap>

    <!-- 获取所有患者 -->
    <select id="selectAll" resultMap="PatientResultMap">
        SELECT * FROM gvp_patient
    </select>

    <!-- 根据ID获取患者 -->
    <select id="selectById" parameterType="Long" resultMap="PatientResultMap">
        SELECT * FROM gvp_patient WHERE id = #{id}
    </select>

    <!-- 根据user_id获取患者 -->
    <select id="selectByUserId" parameterType="Long" resultMap="PatientResultMap">
        SELECT * FROM gvp_patient WHERE user_id = #{userId}
        LIMIT 1
    </select>

    <!-- 根据doctor_id获取患者 -->
    <select id="selectByDoctorId" parameterType="Long" resultMap="PatientResultMap">
        SELECT * FROM gvp_patient WHERE doctor_id = #{doctorId}
    </select>

    <!-- 添加患者 -->
    <insert id="insert" parameterType="com.ruoyi.patient.domain.Patient" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO gvp_patient (user_id, doctor_id, medical_record_no, age, gender, history)
        VALUES (#{userId}, #{doctorId}, #{medicalRecordNo}, #{age}, #{gender}, #{history})
    </insert>

    <!-- 更新患者 -->
    <update id="update" parameterType="com.ruoyi.patient.domain.Patient">
        UPDATE gvp_patient
        SET user_id = #{userId},
            doctor_id = #{doctorId},
            medical_record_no = #{medicalRecordNo},
            age = #{age},
            gender = #{gender},
            history = #{history}
        WHERE id = #{id}
    </update>

    <!-- 删除患者 -->
    <delete id="deleteById" parameterType="Long">
        DELETE FROM gvp_patient WHERE id = #{id}
    </delete>

</mapper>
